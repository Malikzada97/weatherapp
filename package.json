{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "A modern weather application with Tailwind CSS",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./css/style.css -o ./dist/style.css --minify",
    "watch:css": "tailwindcss -i ./css/style.css -o ./dist/style.css --watch",
    "start": "live-server",
    "setup:env": "node scripts/setup-env.js init",
    "validate:env": "node scripts/setup-env.js validate"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "dotenv": "^17.0.0"
  }
}
